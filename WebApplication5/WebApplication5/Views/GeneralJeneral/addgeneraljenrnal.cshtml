@model WebApplication5.ViewModel.CustomerView.AddGeneralJournalClass

@{
    ViewBag.Title = "addgeneraljenrnal";
    Layout = "~/Views/Shared/_LayoutReservationChangescreen.cshtml";
}

<h2 class="label-success" style="display:flex; justify-content:center; color:white">General Jeneral</h2>


@using (Html.BeginForm("addgeneraljenrnalPost", "GeneralJeneral", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
       
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
			<div class="row"> 
           @{ int account = 0;
			   if (ViewBag.selectedaccountid != null) {

				   account = ViewBag.selectedaccountid;
			   }
			    }

      @Html.Hidden("accountNo",account );

				<div class="col-lg-6">
					@Html.LabelFor(model => model.transactionName, htmlAttributes: new { @class = "control-label col-sm-4" })

					@Html.EditorFor(model => model.transactionName, new { htmlAttributes = new { @class = "form-control" } })
					@Html.ValidationMessageFor(model => model.transactionName, "", new { @class = "text-danger" })
				</div>
				<div class="col-lg-6">
					@Html.LabelFor(model => model.transactionDate, htmlAttributes: new { @class = "control-label col-sm-4" })

					@Html.EditorFor(model => model.transactionDate, new { htmlAttributes = new { @class = "form-control" } })
					@Html.ValidationMessageFor(model => model.transactionDate, "", new { @class = "text-danger" })
				</div>

        </div>
			<br />

        <div class="row">
		
       <div class="col-lg-6">
		   @Html.LabelFor(model => model.Debit_Credit, htmlAttributes: new { @class = "control-label col-sm-4" })
			<div class="radio-inline col-lg-offset-1">

				

				@Html.RadioButton("Debit_Credit", "Debit")
				@Html.ValidationMessageFor(model => model.Debit_Credit, "Debit", new { @class = "text-danger" })
			</div>
			<div class="radio-inline col-lg-offset-1">
				@Html.RadioButton("Debit_Credit", "Credit")
				@Html.ValidationMessageFor(model => model.Debit_Credit, "Credit", new { @class = "text-danger" })
			</div>

		   </div>
			<div class="col-lg-6">
				@Html.LabelFor(model => model.amount, htmlAttributes: new { @class = "control-label col-sm-4" })

				@Html.EditorFor(model => model.amount, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.amount, "", new { @class = "text-danger" })
			</div>
        </div>
			<br />
        <div class="row">
			
       
			<div class="col-lg-6">
				@Html.LabelFor(model => model.type, htmlAttributes: new { @class = "control-label col-sm-4" })
				@if (ViewBag.hed != null)
				{
				@Html.DropDownList("type", new SelectList(ViewBag.hed, "typeID", "typeName"), "........Select Category........", new { @class = "form-control" })
				}
				@Html.ValidationMessageFor(model => model.type, "", new { @class = "text-danger" })
				
			</div>
			<div class="col-lg-6">
				@Html.LabelFor(model => model.subtype, htmlAttributes: new { @class = "control-label col-sm-4" })
@if (ViewBag.subhed != null)
{
			@Html.DropDownList("subtype", new SelectList(ViewBag.subhed, "subID", "subName"), "........Select Sub Category........", new { @class = "form-control" })
}
				@Html.ValidationMessageFor(model => model.subtype, "", new { @class = "text-danger" })
			</div>
        </div>
			
        <div class="form-group">
            <div class="col-md-offset-6 " style="margin-top:30px">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </div>
    </div>
		</div>
}

<div>
    @Html.ActionLink("Back to List", "general", "GeneralJeneral")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
