@model IEnumerable<WebApplication5.Models.DB.Desert>

@{
    ViewBag.Title = "ViewDeserts";
    Layout = "~/Views/Shared/_LayoutReservationChangescreen.cshtml";
}
<button class="btn btn-group-sm glyphicon glyphicon-menu-left" onclick="location.href='@Url.Action("Index","StocksDetail")'"></button>

<h2 class="label-success" style="display:flex; justify-content:center; color:white">Deserts</h2>

<table style="display:flex; justify-content:center" class="table table-bordered table-striped table-responsive table-hover">
    <tr>
        <th>
            Desert Name
        </th>
        <th>
           Sale Price
        </th>
        <th>
           Purchase Price   
		</th>
       <th>
           Quantity Of Desert
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Reverse()) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.desertName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.desertSalePrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.desertPurchasePrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.quantityOfdesert)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditDeserts", new { idofDese=item.desertId }) 
        </td>
		<td>
			@Html.ActionLink("Update Quantity", "UpdateDeserts", new { idofDese = item.desertId })
		</td>
    </tr>
}

</table>
