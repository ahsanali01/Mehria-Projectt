@model WebApplication5.Models.NewItemsadding

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutReservationChangescreen.cshtml";
}

<h2 class="label-success" style="display:flex; justify-content:center">Add Stocks Here</h2>
<hr />
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal ">
      
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group col-lg-6">
            @Html.LabelFor(model => model.itemName, htmlAttributes: new { @class = "control-label col-sm-4" })
                @Html.EditorFor(model => model.itemName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.itemName, "", new { @class = "text-danger" })
          
        </div>

        <div class="form-group col-lg-6">
            @Html.LabelFor(model => model.category, htmlAttributes: new { @class = "control-label col-sm-4" })
          
                @Html.EditorFor(model => model.category, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.category, "", new { @class = "text-danger" })
           
        </div>
		<br />
        <div class="form-group col-lg-6">
            @Html.LabelFor(model => model.itemQuantity, htmlAttributes: new { @class = "control-label col-sm-4" })
          
                @Html.EditorFor(model => model.itemQuantity, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.itemQuantity, "", new { @class = "text-danger" })
       
        </div>

        <div class="form-group col-lg-6">
            @Html.LabelFor(model => model.itemSalePrice, htmlAttributes: new { @class = "control-label col-sm-4" })
         
            @Html.EditorFor(model => model.itemSalePrice, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.itemSalePrice, "", new { @class = "text-danger" })
          
        </div>

        <div class="form-group col-lg-6">
            @Html.LabelFor(model => model.itemPurchasePrice, htmlAttributes: new { @class = "control-label col-sm-4" })
          
            @Html.EditorFor(model => model.itemPurchasePrice, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.itemPurchasePrice, "", new { @class = "text-danger" })
         
        </div>

        <div class="form-group">
            <div class="col-lg-offset-9 col-md-10">
                <input  type="submit" value="Submit" class="btn btn-default" />
            </div>
        </div>
    </div>
}


