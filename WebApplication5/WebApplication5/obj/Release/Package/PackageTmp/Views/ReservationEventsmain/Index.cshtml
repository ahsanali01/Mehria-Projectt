@model IEnumerable<WebApplication5.Models.DB.Bookingdata>

@{
    ViewBag.Title = "Reservation";
    Layout = "~/Views/Shared/_LayoutReservationmainpage.cshtml";
}

<h2 class="label-info">Event Details</h2>
@if(Model.Count()>0) {

<table class="table table-bordered table-striped table-responsive table-hover">
    <tr>
       
        <th>
          Booking Date
        </th>
        <th>
           Function Date
        </th>
        <th>
           No of Guest
        </th>
        <th>
           Rate Per Guest(Rs)
        </th>
        <th>
           Advance Payment(Rs)
        </th>
        <th>
            Remaining Payment(Rs)
        </th>
        <th>
            Extras
        </th>
        <th>
          Total Charges
        </th>
        <th>
            Event Occuras
        </th>
      
        <th>Operation Status</th>
		<th>Operation Status</th>
    </tr>

@foreach (var item in Model.Reverse()) {

	   <tr>
       
        <td>
            @Html.DisplayFor(modelItem => item.bookingDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.functionDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.noofGuest)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.rateperGuest)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AdvancePayment)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RemainingPayment)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Extras)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalCharges)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.timeShift)
        </td>
     
		   @if (item.RequestStatus!= "true      ")
		   {
      <td>@Html.ActionLink("Delete", "DeleteFunction", new { id = item.functionID })</td>
		   }
		   else {
			   <td>Request Send! Editable</td>
		   }
		<td>@Html.ActionLink("Edit", "EditFunctionGet", new { id = item.functionID },null)</td>
    </tr>
	 
 }

</table>
}
else
{
	<div class="alert alert-success">
		<p>There is no Current Record Exist</p>
	</div>
}