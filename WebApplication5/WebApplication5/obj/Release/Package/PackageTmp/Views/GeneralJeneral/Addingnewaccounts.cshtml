@model WebApplication5.ViewModel.CustomerView.AddnewAccounts

@{
    ViewBag.Title = "Addingnewaccounts";
    Layout = "~/Views/Shared/_LayoutReservationChangescreen.cshtml";
}

<h2 class="label-success" style="display:flex;justify-content:center">Add Account Detail</h2>


@using (Html.BeginForm("AddingnewaccountsPost", "GeneralJeneral",FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
       
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
			<div class="row">
			<div class="col-lg-6">
				@Html.LabelFor(model => model.accountName, htmlAttributes: new { @class = "control-label col-sm-4" })

				@Html.EditorFor(model => model.accountName, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.accountName, "", new { @class = "text-danger" })
			</div>
   

      
			<div class="col-lg-6">
				@Html.LabelFor(model => model.mobileNo, htmlAttributes: new { @class = "control-label col-sm-4" })
				
					@Html.EditorFor(model => model.mobileNo, new { htmlAttributes = new { @class = "form-control" } })
					@Html.ValidationMessageFor(model => model.mobileNo, "", new { @class = "text-danger" })
			
			</div>
</div>

			<br />
			<br />

			<div class="row">
				<div class="col-lg-6">
					@Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "control-label col-sm-4" })

					@Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
					@Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
				</div>


				<div class="col-lg-6">
					@Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-sm-4" })
					
						@Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
						@Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
					
				</div>
			</div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </div>
			</div>
    </div>
}



<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
@{
	if (TempData["message"] != null)
	{
		<script type="text/javascript">
        alert(@Html.Raw(Json.Encode(TempData["message"])));
		</script>
	}
}