@model WebApplication5.Models.DB.Desert

@{
    ViewBag.Title = "UpdateDeserts";
    Layout = "~/Views/Shared/_LayoutReservationChangescreen.cshtml";
}

<h2 class="label-success" style="display:flex; justify-content:center; color:white">Update Quantity</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.desertId)

        <div class="form-group">
            @Html.Label("Desert Name", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.desertName, new { htmlAttributes = new { @class = "form-control", Readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.desertName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
           @Html.Label("Sale Price", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.desertSalePrice, new { htmlAttributes = new { @class = "form-control", Readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.desertSalePrice, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
          @Html.Label("Purchase Price", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.desertPurchasePrice, new { htmlAttributes = new { @class = "form-control", Readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.desertPurchasePrice, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Quantity Of Desert", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.quantityOfdesert, new { htmlAttributes = new { @class = "form-control",Readonly="readonly" } })
                @Html.ValidationMessageFor(model => model.quantityOfdesert, "", new { @class = "text-danger" })
            </div>
        </div>
		<div class="form-group">
			@Html.Label("", "Update Quantity", htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.TextBox("UpdatedQuantity", null, new { @class = "form-control" })
				@Html.ValidationMessageFor(model => model.quantityOfdesert, "", new { @class = "text-danger" })
			</div>
		</div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "ViewDeserts")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
